<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="MyTestSuite" parallel="tests" thread-count="10">
    <listeners>
        <listener class-name="com.aventstack.extentreports.testng.listener.ExtentITestListenerClassAdapter"/>
    </listeners>
    <test name="uitest_Chrome">
        <parameter name="browser" value="chrome"/>

        <classes>
            <class name="lumaProject.Tests.HomePageTest"/>
            <class name="lumaProject.Tests.WhatsNewTest"/>
            <class name="lumaProject.Tests.CreateAccountTest"/>
            <class name="lumaProject.Tests.LoginpageTest"/>
            <class name="lumaProject.Tests.AddAddressTest"/>
        </classes>
    </test>

    <test name="uitest_firefox">
        <parameter name="browser" value="firefox"/>

        <classes>

            <class name="lumaProject.Tests.HomePageTest"/>
            <class name="lumaProject.Tests.WhatsNewTest"/>
            <class name="lumaProject.Tests.CreateAccountTest"/>
            <class name="lumaProject.Tests.LoginpageTest"/>
            <class name="lumaProject.Tests.AddAddressTest"/>

        </classes>
    </test>
    <test name="uitest_edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="lumaProject.Tests.HomePageTest"/>
            <class name="lumaProject.Tests.WhatsNewTest"/>
            <class name="lumaProject.Tests.CreateAccountTest"/>
            <class name="lumaProject.Tests.LoginpageTest"/>
            <class name="lumaProject.Tests.AddAddressTest"/>

        </classes>
    </test>
</suite>
